extends testLayoutnavbar.pug

append head
  link(rel="stylesheet" href="/stylesheets/mytasks.css")
  script(src="/javascripts/mytasksdelete.js" type="module" defer)
  script(src="/javascripts/mytaskscheck.js" type="module" defer)

block content
  div.whitespace
    .title
      h1=listTitle
    .addTask
    a(href='/tasks/create')
      button(id='add_task') Add Task
    .incomplete
      h3 Not Complete
      .container
        each incompleteTask in incompleteTasks
          div(class='tasks' id=`task-${incompleteTask.id}`)
            span #{incompleteTask.title}
              .buttons
                button(id=`remove-${incompleteTask.id}`).check checkmark
                button(id=`delete-${incompleteTask.id}`).delete delete
                button(id=`remove-${incompleteTask.id}`).edit edit

    .complete
      h3 Completed
      .container.completeContainer
        each completedTask in completedTasks
          div(class='tasks' id=completedTask.id)
            span #{completedTask.title}
              .buttons
                button(id=`delete-${completedTask.id}`).delete delete
